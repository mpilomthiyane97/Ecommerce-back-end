{
  "name": "E-commerce",
  "version": "1.0.0",
  "description": "E-Commerce",
  "main": "index.js",
  "scripts": {
    "start:app": "NODE_ENV=development nodemon server/index.js",

    "start": "docker-compose up",
    "build": "docker-compose up --build",
    "prune": "docker-compose down -v",
    "stop": "docker-compose down",
    "test:app": "NODE_ENV=test mocha --exit --require mocha-steps ./server/tests",
    "test": "powershell -Command \"$CONT = docker ps -aqf name=node-app; if ($CONT) { docker exec -t -w /backend-app $CONT npm run test:app }\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongodb": "^4.1.2",
    "mongoose": "^6.0.7"
  },
  "devDependencies": {
    "bcryptjs": "^2.4.3",
    "chai": "^4.5.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^9.2.2",
    "mocha-steps": "^1.3.0",
    "nodemon": "^2.0.12",
    "sinon": "^18.0.0",
    "supertest": "^6.3.4"
  }
}
